    <script>
        var mydata = {{ FAOdata | raw }};

        mydata.forEach(function (record) {
                    record.year = record.year.toString();
                    delete record.area;
                }
        );


        jQuery("#YTDSummary").jqGrid('jqPivot', mydata,
                {
                    xDimension: [{
                        dataName: 'Item'
                    }],
                    yDimension: [{
                        dataName: 'year'
                    }],
                    aggregates: [{
                        member: 'Production',
                        aggregator: 'sum',
                        formatter: 'number',
                        align: 'right',
                        summaryType: 'sum'
                    }]
                }, {

                    autoResizing: {
                        compact: true
                    },
                    shrinkToFit: true,
                    width: "auto",
                    height: "auto",
                    rowNum: "auto",
                    iconSet: "fontAwesome",
                    pager: true,
                    onInitGrid: function () {
                        var p = $(this).jqGrid("getGridParam");

                        p.datastr = $.grep(p.datastr, function (item) {
                            return item.ComponentType !== "";
                        });
                    }
                });

    </script>



{% endblock %}

