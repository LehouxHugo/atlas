                    <div class="ibox-content no-padding border-left-right">
                        <img alt="image" class="img-responsive" src="http://webapplayers.com/inspinia_admin-v2.2/img/profile_big.jpg">
                    </div>
                    <div class="ibox-content profile-content">
                        <div class="pull-right">
                            <a class="btn btn-white btn-xs" href="{{ path('adm_organization_update',{'label': organization.label}) }}"
                               role="button"><i class="fa fa-pencil"></i> Editer</a>
                        </div>
                        <h4><strong>{{ organization.name }}</strong></h4>
                        {% if organization.url  is not empty %}
                        <p>
                            <a href="{{ organization.url }}">{{ organization.url }}</a>
                        </p>
